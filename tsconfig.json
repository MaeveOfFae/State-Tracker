{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": [
    "src/App.tsx",
    "src/TestRunner.tsx",
    "src/entry-stages.tsx"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
